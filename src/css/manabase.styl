.button-group
  border: 1px solid border-color
  margin: 6px 8px 0 0
  radius(4px)
  li
    float: left
    border-right: 1px solid border-color
    text-align: center
    color: dark-grey
    width: 26px
    line-height: 24px
    cursor: pointer
    &:first-child
