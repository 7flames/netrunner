  .active
    background: orange
    color: white
    &:hover
      background: orange
      color: white

.sidebar
  width: 180px
  float: left
  h4
    margin-bottom: 4px
  ul
    margin-bottom: 8px
    li
      margin: 0 0 4px 12px
    a
      display: inline-block
      color: text-color
      &:hover
        color: orange

.date
  color: grey
  margin-right: 8px

.gallery-view
  img
    margin-bottom: 10px
    cursor: pointer

.thicklist
  li
    list-style-type: none

.cadre
  img
    border: 4px solid white
    box-shadow 0 0 3px rgba(0, 0, 0, 0.3)
    radius(4px)

.listview
  cursor: pointer
  th
    &:after
      font-family: "entypo"
      font-size: 24px
      margin-left: 4px
      position: relative
      top: 1px
    &:hover:after
      content: ""
  th.sort
    &:after
      content: ""
    &:hover:after
      content: ""
  th.sort-reverse
    &:after
      content: ""
    &:hover:after
      content: ""

.card-page
  .description
    font-size: 1.15em
  .text
    width: 318px
    font-family: Georgia, Serif
  .influence
    margin: 4px
    > span
