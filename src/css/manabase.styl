// Layout
.content
  padding-top: 40px

.topheader
  position: fixed
  left: 0
  right: 0
  z-index: 1000
  background: white
  border-bottom: 1px solid border-color
  box-shadow(0 1px 4px shadow-color)
  .brand
    padding: 0 20px
  .navbar
    a
      line-height: 28px
    .nav
      > li
        a
          padding: 0 12px
          &:hover
            color: orange
        .active
          color: orange
      .dropdown-toggle .caret
        margin-top: 13px

.contact
  margin: 0
  li
    list-style-type: none
    margin: 0
    float: right
    padding: 4px 8px

section
  padding: 8px

.section
  margin: 16px 0
  h2
    padding-bottom: 4px
    border-bottom: 1px solid border-color
    margin-bottom: 12px
    font-weight: normal
    a
      font-size: 13px
      margin-left: 16px
      font-weight: normal

.footer
  border-top: 1px solid border-color
  border-bottom: 1px solid border-color
  padding: 16px 0 120px
  background: light-background
  margin-top: 64px
  ul
    vertical-align: top
    display: inline-block
    h4
      margin: 4px 0
    li
      list-style-type: none
      margin: 2px 0
    a
      color: text-color
      &:hover
        color: orange

// Element

.dropdown
  li
    a:hover
      background: light-background

.pageHeader
  h3
    margin-top: 0

.navbar-search
  margin-top: 6px
  .search-query
    padding: 5px 22px
    background: light-background
  .search-icon
    position: absolute
    color: dark-grey
    font-size: 31px
    top: 8px
    left: 5px
  .search-clear
