.filters
  li
    a.active
      background: light-grey
      color: text-color

.frame
  min-height: 20px
  margin-bottom: 20px
  background-color: #f5f5f5
  border: 1px solid #e3e3e3
  radius(4px)
  box-shadow(inset 0 1px 1px rgba(0, 0, 0, 0.05))

.decklist
  border: 1px solid border-color
  padding: 0 10px 5px
  margin: 15px 0
  .influence
    font-size: 20px
    line-height: 8px
  .button
    float: right
    font-size: 32px
    line-height: 18px
    cursor: pointer
    margin-left: 2px

